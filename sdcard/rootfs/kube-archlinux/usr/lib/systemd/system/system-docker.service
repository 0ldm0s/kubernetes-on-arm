[Unit]
Description=Docker Application Container Engine
After=network.target system-docker.socket
Requires=system-docker.socket

[Service]
ExecStart=/usr/bin/docker -d -H unix:///var/run/system-docker.sock -s overlay --exec-opt native.cgroupdriver=cgroupfs -p /var/run/system-docker.pid --iptables=false --ip-masq=false --bridge=none --graph=/var/lib/system-docker
MountFlags=slave
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity

[Install]
WantedBy=multi-user.target