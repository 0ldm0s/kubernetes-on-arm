[Unit]
Description=The Master Components for Kubernetes
After=docker.service

[Service]
ExecStartPre=-/usr/bin/docker kill k8s-master worker-k8s-proxy
ExecStartPre=-/usr/bin/docker rm k8s-master worker-k8s-proxy
ExecStart=/bin/bash -c "exec docker run --name=k8s-master --net=host -v /var/run/docker.sock:/var/run/docker.sock k8s/hyperkube /hyperkube kubelet --pod_infra_container_image="k8s/pause" --api-servers=http://localhost:8080 --v=2 --address=0.0.0.0 --enable-server --hostname-override=$(/usr/bin/hostname -i | /usr/bin/awk '{print $1}') --config=/etc/kubernetes/manifests-multi"
ExecStartPost=/usr/bin/docker run -d --name=worker-k8s-proxy --net=host --privileged k8s/hyperkube /hyperkube proxy --master=http://localhost:8080 --v=2
ExecStop=/usr/bin/docker stop k8s-master worker-k8s-proxy

[Install]
WantedBy=multi-user.target